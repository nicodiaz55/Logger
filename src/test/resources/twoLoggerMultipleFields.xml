<?xml version="1.0" encoding="UTF-8"?>
<levels>TRACE,DEBUG,INFO,WARNING,ERROR,FATAL</levels>
<Loggers>
<logger>
	<name>Logger1</name>
	<level>INFO</level>
	<outputs>
		<output>
			<type>log1.txt</type>
			<formatter>%d{HH:mm:ss} %n %m</formatter>
			<separator>|</separator>
		</output>
		<output>
			<type>log2.txt</type>
			<formatter>%d{HH:mm:ss} %n %p %n %m</formatter>
			<separator>-</separator>
		</output>
		<output>
			<type>console</type>
			<formatter>%d{HH:mm:ss} %n %t %n %m</formatter>
			<separator>/</separator>
		</output>
	</outputs>
</logger>

<logger>
	<name>Logger2</name>
	<level>INFO</level>
	<outputs>
		<output>
			<type>log1.txt</type>
			<formatter>%d{HH:mm:ss} %n %m</formatter>
